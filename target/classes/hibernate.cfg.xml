<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">000000</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/vrms</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hbm2ddl.auto">update</property>
         <property name="show_sql">true</property>
         <mapping class="com.shashank.vrms.models.Vehicle"/>
          <mapping class="com.shashank.vrms.models.VehicleDocuments"/>
           <mapping class="com.shashank.vrms.models.Brand"/>
           <mapping class="com.shashank.vrms.models.BusinessInformation"/>
           <mapping class="com.shashank.vrms.models.User"/>
           <mapping class="com.shashank.vrms.models.UserDetails"/>
            <mapping class="com.shashank.vrms.models.Driver"/>
             <mapping class="com.shashank.vrms.models.Booking"/>
            
    </session-factory>
</hibernate-configuration>
